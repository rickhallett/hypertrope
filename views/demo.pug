form
  fieldset
    legend Contact information:
    .row
      .col.m6
        label(for='Email') Enter email
        input#Email._full-width(type='email', placeholder='test@mail.com')
      .col.m6
        label(for='Input') Reason for contact
        select#Input._width100
          option(value='Option 1') Help
          option(value='Option 2') Thanks
          option(value='Option 3') Support
    label(for='Message') Message
    .col.m12
      textarea#Message._width100(placeholder='Your message..')
    label(for='Send')
      input#Send(type='checkbox')
      span.-label-body Send a copy to yourself
    input._primary.button(type='submit', value='Submit')
    input.button(type='reset', value='Reset')
    br



