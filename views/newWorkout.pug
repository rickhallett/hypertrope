extends layout

block content
  form(action="/workout/new", method="post")

    button.accordion._box._shadow._dark.top-spacer-1px.no-bottom-margin(type="button") Personal Details
    .-panel

      span Name
      input(name="name")

      span Date:
      input(name="date", type="date")

    button.accordion._box._shadow._dark.no-bottom-margin(type="button") Exercise 1
    .-panel

      span Exercise 1
        select(name="lift1")
          each exercise in menu_opts
            option(value=exercise.value) #{exercise.name}
      span Sets:
      input(name="sets1")
      span Reps:
      input(name="reps1")

    button.accordion._box._shadow._dark.no-bottom-margin(type="button") Exercise 2
    .-panel

      span Exercise 2
      .select
        select(name="lift2")
          each exercise in menu_opts
            option(value=exercise.value) #{exercise.name}
      span Sets:
      input(name="sets2")
      span Reps:
      input(name="reps2")

    button.accordion._box._shadow._dark.no-bottom-margin(type="button") Exercise 3
    .-panel

      span Exercise 3
        select(name="lift3")
          each exercise in menu_opts
            option(value=exercise.value) #{exercise.name}
      span Sets:
      input(name="sets3")
      span Reps:
      input(name="reps3")

    button.accordion._box._shadow._dark.no-bottom-margin(type="button") Comments
    .-panel

      span Comments
      textarea(name="comments", cols="50", rows="5")

    .flex-container.justify-center.margin-20
      input._alignCenter(type="submit", value="Submit workout")

