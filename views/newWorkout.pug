extends layout

block scripts
  script(src='/javascripts/newWorkout.js')
  //- script(src='/javascripts/fillTestDetails.js')

block content
  form(action="/workouts/new", method="post", id="workout_form")

    button.accordion._box._shadow._dark.top-spacer-1px.no-bottom-margin(type="button") Personal Details
    .-panel
      fieldset
        legend Personal Details
        .row
          .col.m6.no-padding
            label(for="name") Name:
            input#name._full-width(name="name", type="text", value=user.username, disabled="true")
          .col.m6.no-padding
            label(for="date") Date:
            input._full-width(name="date", type="date")

    button.accordion._box._shadow._dark.no-bottom-margin(type="button") Exercise Options
    .-panel
      fieldset
        legend Submission Options
        label You must choose the number of exercises first.
        label(for="exercise_number") Number of exercises
        select._full-width#select-number-exercise(name="exercise_number") 
          option(value="0") -- Please choose an option --
          option(value="1") One exercise
          option(value="2") Two exercises
          option(value="3") Three exercises
          option(value="4") Four exercises
          option(value="5") Five exercises
          option(value="6") Six exercises
          option(value="7") Seven exercises
          option(value="8") Eight exercises
          option(value="9") Nine exercises
          option(value="10") Ten exercises
          option(value="11") Eleven exercises
          option(value="12") Twelve exercises
          option(value="13") Thirteen exercises
          option(value="14") Fourteen exercises
          option(value="15") Fifteen exercises

        .flex-container.justify-center
          input#refresh-new-workout._alignCenter(type="button", value="Refresh Page") 
          br
          //- small (refreshing page will reset your exercise data...)

    #exercise-selectors._hidden
      button#accordian-button.exercise-dropdown.accordion._box._shadow._dark.no-bottom-margin(type="button") Exercise 1
      .-panel#accordian-panel
        fieldset
          legend Exercise 1 Details
          .row
            .col.m4.no-padding
              label Exercise Options
              select#exercise-name-1._full-width(name="lift1")
                each exercise in menu_opts
                  option(value=exercise.value) #{exercise.name}

            .col.m4.no-padding
              label Sets:
              input#input-sets-1._full-width(name="sets1", type="number")

            .col.m4.no-padding
              label Reps:
              input#input-reps-1._full-width(name="reps1", type="number")

            .col.m4.no-padding
              label Weight (kg):
              input#input-weight-1._full-width(name="weight1", type="number")

      button.exercise-dropdown.accordion._box._shadow._dark.no-bottom-margin(type="button") Exercise 2
      .-panel
        fieldset
          legend Exercise 2 Details
          .row
            .col.m4.no-padding
              label Exercise Options
              select#exercise-name-2._full-width(name="lift2")
                each exercise in menu_opts
                  option(value=exercise.value) #{exercise.name}

            .col.m4.no-padding
              label Sets:
              input._full-width(name="sets2", type="number")

            .col.m4.no-padding
              label Reps:
              input._full-width(name="reps2", type="number")

            .col.m4.no-padding
              label Weight (kg):
              input._full-width(name="weight2", type="number")

      button.exercise-dropdown.accordion._box._shadow._dark.no-bottom-margin(type="button") Exercise 3
      .-panel
        fieldset
          legend Exercise 3 Details
          .row
            .col.m4.no-padding
              label Exercise Options
              select#exercise-name-3._full-width(name="lift3")
                each exercise in menu_opts
                  option(value=exercise.value) #{exercise.name}

            .col.m4.no-padding
              label Sets:
              input._full-width(name="sets3", type="number")

            .col.m4.no-padding
              label Reps:
              input._full-width(name="reps3", type="number")

            .col.m4.no-padding
              label Weight (kg):
              input._full-width(name="weight3", type="number")
        
       

    button.accordion._box._shadow._dark.no-bottom-margin(type="button") Comments
    .-panel

      label(for="comments") Comments
      textarea#comment-input._full-width(name="comments", placeholder="Enter any workout comments or notes here", rows: 10)

    .flex-container.justify-center.margin-20
      input._alignCenter#submit-workout(type="submit", value="Submit Workout")

    