extends layout

block content
  h1= title
  p Welcome to #{title}

  form(action="/workout/new", method="post")

    span Name
    input(name="name", required)

    span Date:
    input(name="date", type="date")

    span Exercise 1
      select(name="lift1")
        each exercise in menu_opts
          option(value=exercise.value) #{exercise.name}
    span Sets:
    input(name="sets1")
    span Reps:
    input(name="reps1")

    span Exercise 2
    .select
      select(name="lift2")
        each exercise in menu_opts
          option(value=exercise.value) #{exercise.name}
    span Sets:
    input(name="sets2")
    span Reps:
    input(name="reps2")

    span Exercise 3
      select(name="lift3")
        each exercise in menu_opts
          option(value=exercise.value) #{exercise.name}
    span Sets:
    input(name="sets3")
    span Reps:
    input(name="reps3")

    span Comments
    textarea(name="comments", cols="50", rows="5")

    input(type="submit", value="Submit workout")

  a(href="/list/dad") List Dad's Workouts
  a(href="/list/mum") List Mum's Workouts
  a(href="/list/dad") List Pufflet's Workouts
  a(href="/list/mum") List Rick's Workouts


